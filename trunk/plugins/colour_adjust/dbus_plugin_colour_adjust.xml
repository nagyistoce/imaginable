<node name="/name/kuzmashapran/imaginable">
	<interface name="name.kuzmashapran.imaginable.plugin.colour_adjust">

		<method name="invertAll"><arg type="u" direction="out"/>
			<arg type="t" name="Id" direction="in"/>
		</method>

		<method name="invert"><arg type="u" direction="out"/>
			<arg type="t" name="Id" direction="in"/>
			<arg type="i" name="plane" direction="in"/>
		</method>

		<method name="gammaAll"><arg type="u" direction="out"/>
			<arg type="t" name="Id" direction="in"/>
			<arg type="d" name="value" direction="in"/>
		</method>

		<method name="gamma"><arg type="u" direction="out"/>
			<arg type="t" name="Id" direction="in"/>
			<arg type="i" name="plane" direction="in"/>
			<arg type="d" name="value" direction="in"/>
		</method>

		<method name="curveAll"><arg type="u" direction="out"/>
			<arg type="t" name="Id" direction="in"/>
			<arg type="a{qq}" name="value" direction="in"/><annotation name="com.trolltech.QtDBus.QtTypeName.In1" value="QAdjustPoint"/>
		</method>

		<method name="curve"><arg type="u" direction="out"/>
			<arg type="t" name="Id" direction="in"/>
			<arg type="i" name="plane" direction="in"/>
			<arg type="a{qq}" name="value" direction="in"/><annotation name="com.trolltech.QtDBus.QtTypeName.In2" value="QAdjustPoint"/>
		</method>

		<method name="errorCodeToString"><arg type="s" direction="out"/>
			<arg type="u" name="errorCode" direction="in"/>
		</method>

	</interface>
</node>
