<node name="/name/kuzmashapran/imaginable">
	<interface name="name.kuzmashapran.imaginable.root">

		<property      name="autoCloseTime" type="u" access="readwrite"/>
		<method name="restartAutoCloseTimer"/>

		<method name="version">
			<arg type="s" direction="out"/>
		</method>

		<method name="createImage"><arg type="t" direction="out"/>
		</method>
		<signal name="imageCreated">
			<arg type="t" name="Id"/>
		</signal>

		<method name="deleteImage"><arg type="b" direction="out"/>
			<arg type="t" name="Id" direction="in"/>
		</method>
		<signal name="imageDeleted">
			<arg type="t" name="Id"/>
		</signal>

		<method name="loadPlugin"><arg type="b" direction="out"/>
			<arg type="s" name="fileName" direction="in"/>
		</method>

		<method name="loadAllPlugins"><arg type="as" direction="out"/>
			<arg type="s" name="dirName" direction="in"/>
			<annotation name="com.trolltech.QtDBus.QtTypeName.Out0" value="QStringList"/>
		</method>

		<method name="isPluginLoaded"><arg type="b" direction="out"/>
			<arg type="s" name="fileName" direction="in"/>
		</method>

		<method name="pluginName"><arg type="s" direction="out"/>
			<arg type="s" name="fileName" direction="in"/>
		</method>

		<method name="pluginVersion"><arg type="s" direction="out"/>
			<arg type="s" name="fileName" direction="in"/>
		</method>

		<method name="pluginsList"><arg type="as" direction="out"/>
			<annotation name="com.trolltech.QtDBus.QtTypeName.Out0" value="QStringList"/>
		</method>

		<method name="unloadPlugin"><arg type="b" direction="out"/>
			<arg type="s" name="fileName" direction="in"/>
		</method>

		<method name="quit"/>

	</interface>
</node>
